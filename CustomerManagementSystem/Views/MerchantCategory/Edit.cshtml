@model MerchantCategory

<form method="post">
    <input asp-for="Id" hidden />
    
    <div class="border p-4 mt-4">
        <div class="row pb-2">
            <h2>Edit Merchants Category</h2>
            <hr />
        </div>
        <div class="mb-3 row">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="col-sm-3 border-top-0 border-end-0 border-start-0 border-1 bg-light-subtle form-control" style=" padding-left: 4px;" type="text"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" class="col-sm-3 border-top-0 border-end-0 border-start-0 border-1 bg-light-subtle form-control" style="padding-left: 4px;" type="text"/>
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>

        </div>

        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-6">
                <a asp-controller="MerchantCategory" asp-action="index" class="btn btn-outline-secondary border form-control">Back</a>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}