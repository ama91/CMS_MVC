@model MerchantCategory

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Susbend Merchants Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-4">
                <div class="row pb-2">
                    <h2>Susbend Merchants Category</h2>
                    <hr />
                </div>
                <div class="mb-3 row">
                    <label asp-for="Name" class="p-0"></label>
                    <input asp-for="Name" disabled class="col-sm-3 border-top-0 border-end-0 border-start-0 border-1 bg-light-subtle form-control" style=" padding-left: 4px;" type="text" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3 row">
                    <label asp-for="DisplayOrder" class="p-0"></label>
                    <input asp-for="DisplayOrder" disabled class="col-sm-3 border-top-0 border-end-0 border-start-0 border-1 bg-light-subtle form-control" style="padding-left: 4px;" type="text" />
                </div>
                <div class="row">
                    <div class="col-6">
                        <button type="submit" class="btn btn-danger form-control">Susbend</button>
                    </div>
                    <div class="col-6">
                        <a asp-controller="MerchantCategory" asp-action="index" class="btn btn-outline-secondary border form-control">Back</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>