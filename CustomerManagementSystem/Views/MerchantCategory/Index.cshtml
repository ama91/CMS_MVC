@model List<MerchantCategory>

<div class="container">
    <div>
        <div class="col-6 row pt-4 pb-3">
            <h2>
                Merchant Category
            </h2>
        </div>
        <div class="pb-1 text-end">
            <a asp-controller="MerchantCategory" asp-action="Create" class="btn btn-primary" title="Create new category">
                <i class="bi bi-plus-circle"></i>
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var category in Model.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>
                        @category.Name
                    </td>
                    <td>
                        @category.DisplayOrder
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>